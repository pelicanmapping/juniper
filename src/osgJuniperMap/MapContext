#ifndef OSGJUNIPERMAP_MAPCONTEXT_H
#define OSGJUNIPERMAP_MAPCONTEXT_H 1

#include <osgJuniperMap/Common>
#include <osg/Group>
#include <osg/CoordinateSystemNode>
#include <osgEarth/MapNode>
#include <osgViewer/ViewerBase>

namespace osgJuniper { namespace Map {

    class OSGJUNIPERMAP_EXPORT MapContext : public osg::Referenced
    {
    public:
        MapContext(osg::Group* root, osgEarth::MapNode* mapNode, osgViewer::ViewerBase* viewer);
        
        bool getIntersection(const osg::Vec3d& position, osg::Vec3d& hit, osg::Vec3& normal);

        static bool getNodeIntersection(osg::Node* node, const osg::EllipsoidModel* ellipsoid, const osg::Vec3d& position, osg::Vec3d& hit, osg::Vec3& normal, double altitude = 0.0);

        const osg::EllipsoidModel* getEllipsoid() const;

        osgEarth::MapNode* getMapNode() const { return _mapNode.get();}

        osg::Group* getRoot() { return _root.get(); }

        osgViewer::ViewerBase* getViewer() { return _viewer.get(); }

    private:
        osg::ref_ptr< const osg::EllipsoidModel > _ellipsoid;
        osg::ref_ptr< osg::Group > _root;

        osg::ref_ptr< osgEarth::MapNode > _mapNode; 
        osg::ref_ptr< osgViewer::ViewerBase > _viewer;
    };    

}}

#endif //OSGJUNIPERMAP_PRIMITIVE_H
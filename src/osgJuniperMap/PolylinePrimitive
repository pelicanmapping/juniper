#ifndef OSGJUNIPERMAP_POLYLINEPRIMITIVE_H
#define OSGJUNIPERMAP_POLYLINEPRIMITIVE_H 1

#include <osgJuniperMap/Common>
#include <osgJuniperMap/Primitive>
#include <osg/LineWidth>
#include <osg/MatrixTransform>

#include <osgEarthAnnotation/FeatureNode>

#include <osgEarthSymbology/Geometry>

namespace osgJuniper { namespace Map {


    class OSGJUNIPERMAP_EXPORT PolylinePrimitive : public Primitive
    {
    public:
        PolylinePrimitive(PrimitiveId id);

        virtual const char* className() const { return "PolylinePrimitive"; } 

        osgEarth::Symbology::Geometry* getGeometry();
        const osgEarth::Symbology::Geometry* getGeometry() const;
        void setGeometry(osgEarth::Symbology::Geometry* geometry);

        virtual void setMapContext(MapContext* context);
        
        void setLineWidth(float lineWidth);
        float getLineWidth() const;

		void setPrimitiveType(PrimitiveType type);

        enum LineStyle
        {
            LINESTYLE_SOLID      = 0,
            LINESTYLE_DASH       = 0x00FF,
            LINESTYLE_DOT        = 0x0F0F,
            LINESTYLE_DASHDOT    = 0x060F,
            LINESTYLE_DASHDOTDOT = 0x18CF
        };

        void setLineStyle(LineStyle style);
        LineStyle getLineStyle() const;

        void setColor(osg::Vec4& color);
        const osg::Vec4& getColor() const;

        bool getClamped() const;
        void setClamped( bool clamped );

        virtual void setProperty(const std::string& name, int value);
        virtual void setProperty(const std::string& name, double value);
        virtual void setProperty(const std::string& name, const osg::Vec3d& value);
        virtual void setProperty(const std::string& name, const LocationList& locations);
		virtual void setProperty(const std::string& name, std::vector< osg::Vec2 > value);

    protected:

		~PolylinePrimitive();
        virtual void init();

        void styleChanged();

        osg::ref_ptr< osgEarth::Annotation::FeatureNode > _featureNode;
        osg::ref_ptr< osgEarth::Features::Feature > _feature;
        osg::ref_ptr< osgEarth::MapNode > _mapNode;
        osg::ref_ptr< osgEarth::Symbology::Geometry> _geometry;
		osg::ref_ptr< osg::Geometry > _screenGeometry;

		osg::ref_ptr< osg::Vec2Array > _points;
        osg::ref_ptr< osg::Geode > _geode;
		osg::ref_ptr< osg::Vec4Array > _colorArray;
		osg::ref_ptr< osg::LineWidth > _lineWidth;

		LineStyle _lineStyle;
		float _alpha;

        osg::Vec4 _color;
        bool _clamped;
    };


}}
#endif